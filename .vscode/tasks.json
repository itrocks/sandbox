			}
		},
		{
			"command": "npm run start:watch",
			"label": "start",
			"presentation": {
				"close": true,
				"panel": "new",
				"reveal": "always"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
			"type": "shell",
			"windows": {
				"command": "node_modules/.bin/nodemon"
			}
		}
	]
