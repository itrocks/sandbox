{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	},
	"include": ["app/**/*", "local/**/*", "tests/**/*"],
	"references": [{ "path": "./front" }]
}
