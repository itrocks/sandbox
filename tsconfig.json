{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"plugins": [
			{ "transform": "@itrocks/route/static-routes-plugin" },
			{ "transform": "@itrocks/uses/uses-interface-plugin" },
			{ "transform": "@itrocks/uses/uses-interface-plugin", "afterDeclarations": true }
		],
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["./app", "./local", "./tests"]
}
