{
	"author": "Baptiste Pillot",
	"dependencies": {
		"@fastify/cookie": "^10.0",
		"@fastify/formbody": "^8.0",
		"@fastify/multipart": "^9.0",
		"@fastify/session": "^11.0",
		"@itrocks/build": "latest",
		"@itrocks/contenteditable": "latest",
		"@itrocks/table": "latest",
		"@itrocks/xtarget": "latest",
		"air-datepicker": "^3.5",
		"autocompleter": "^9.3.2",
		"date-fns": "^4.1",
		"fastify": "~5.0",
		"html-to-text": "^9.0",
		"mariadb": "^3.4",
		"nodemailer": "^6.9",
		"normalize.css": "^8.0",
		"papaparse": "^5.4",
		"pdfkit": "^0.15",
		"reflect-metadata": "^0.2",
		"svg-to-pdfkit": "^0.1",
		"typescript": "^5.6"
	},
	"devDependencies": {
		"@types/html-to-text": "^9.0",
		"@types/jest": "^29.5",
		"@types/node": "^22.9",
		"@types/nodemailer": "^6.4",
		"@types/papaparse": "^5.3",
		"@types/pdfkit": "^0.13",
		"@types/svg-to-pdfkit": "^0.1",
		"jest": "^29.7",
		"nodemon": "^3.1",
		"npm-run-all": "^4.1",
		"sass": "^1.80",
		"ts-jest": "^29.2",
		"ts-node": "^10.9",
		"ts-patch": "^3.2"
	},
	"name": "sandbox",
	"scripts": {
		"build": "npm-run-all --parallel build:app build:front build:sass:app build:sass:front",
		"build:ts": "npm-run-all --parallel build:app build:front",
		"build:app": "tspc -p tsconfig-app.json",
		"build:front": "npm run types && tspc -p tsconfig-front.json",
		"build:sass": "npm-run-all --parallel build:sass:app build:sass:front",
		"build:sass:app": "sass app:app",
		"build:sass:front": "sass front:front",
		"build:watch": "npm-run-all --parallel build:watch:app build:watch:front build:watch:sass",
		"build:watch:app": "tspc -p tsconfig-app.json -w",
		"build:watch:front": "npm run types && tspc -p tsconfig-front.json -w",
		"build:watch:sass": "sass -w app:app front:front",
		"start": "node app/main",
		"start:watch": "nodemon",
		"test": "jest",
		"types": "cp node_modules/autocompleter/autocomplete.d.ts node_modules/autocompleter/autocomplete.es.d.ts"
	}
}
